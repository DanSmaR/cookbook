<div class="card border-0 shadow-lg">
  <div class="card-header d-flex justify-content-start align-items-center" style="gap: 1em">
    <h3 class="mt-2">
      <%= @recipe.title %>
      <%= link_to 'Editar', edit_recipe_path(@recipe), class: 'btn btn-primary' %>
    </h3>
    <% if user_signed_in? %>
      <%= link_to 'Adicionar Ã  Lista', pick_recipe_lists_path(@recipe), class: 'btn btn-secondary' %>
    <% end %>
    <% if user_signed_in? && @recipe.user == current_user %>
      <%= button_to 'Remover', recipe_path(@recipe),
                    method: :delete, class: 'btn btn-danger'
      %>
    <% end %>
  </div>
  <div class="card-body">
    <p class="strong"> Criado por: <%= @recipe.user.email %> </p>
    <p class="strong"> Tipo de Receita: <%= @recipe.recipe_type.name %> </p>
    <p class="strong"> Tempo de preparo: <%= @recipe.cook_time %> minutos </p>
    <p class="strong"> Ingredientes: <%= @recipe.ingredients %> </p>
    <h4>Forma de preparo</h4>
    <p><%= @recipe.instructions%></p>
  </div>
</div>
