<article class="container mt-3">
  <h2>Resultado da Busca por: <em class="strong"><%= @name %></em></h2>

  <p>
    <%= @recipes.count %> <%= Recipe.model_name.human(count: @recipes.count).downcase %>
    <%= t(:found, count: @recipes.count) %>
  </p>

  <section id="recipes">
    <div class="d-flex flex-row">
      <% @recipes.each do |recipe| %>
        <article class="card my-5 mx-3 border-0 shadow-lg">
          <div class="card-header">
            <h3> <%= link_to recipe.title, recipe_path(recipe) %></h3>
          </div>
          <div class="card-body">
            <ul>
              <li>Tipo: <%= recipe.recipe_type.name %></li>
              <li>Tempo de preparo: <%= recipe.cook_time %> minutos</li>
            </ul>
          </div>
        </article>
      <% end %>
    </div>
  </section>
</article>